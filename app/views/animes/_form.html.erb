
<% if @anime.errors.any?%>
  <div class="alert alert-danger">
    <%= pluralize(@anime.errors.count, "error")%>
    <ul>
      <%@anime.errors.full_messages.each do |x|%>
        <li><%=x%></li>
      <%end%>
    </ul>
  </div>
<%end%>


<%= form_with(model: @anime, local: true, :class=>"emptoes" ) do |form| %>
  <div class="form-group">
    <%= form.label(:name, :class=>"peniss") %>
    <%= form.text_field(:name, :class=>"form-control") %>
  </div>

  <div class="form-group">
    <%= form.label :description%>
    <%= form.text_area(:description, :class=>"form-control", :rows=>"4")%>
  </div>

  <div class="form-group">
    <%= form.label :location%>


    <%select_list = [ 'Kanon', 'Ionassal' ]%>
    <%= form.select(:location, Anime::LOCATIONS, {}, {:class=>"form-control"})  %>

  </div>

  <div class="">
    <%if @anime.new_record?%>
      <% r="Add"%>
    <%else%>
      <% r="Edit"%>
    <%end%>
  </div>

  <p>
    <%= form.submit(:class=>"btn btn-primary", :value=>"Submit")%>
  </p>

<%end%>
